<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_dialog_bg_shape"
        android:orientation="vertical"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/alert_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:text="标题"
            android:textColor="#323232"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/alert_txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:textColor="#030303"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/dialog_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg"
            android:hint="请输入4位数字"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alert_txt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#e6e6e6" />

            <TextView
                android:id="@+id/alert_txt_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_color"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>