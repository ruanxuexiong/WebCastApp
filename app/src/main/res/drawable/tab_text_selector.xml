<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active tab -->
    <item android:color="@color/green" android:state_focused="false" android:state_pressed="false" android:state_checked="true"/>
    <!-- Inactive tab -->
    <item android:color="@color/grey_99" android:state_focused="false" android:state_pressed="false" android:state_checked="false"/>
    <!-- Pressed tab -->
    <item android:color="@color/green" android:state_pressed="true"/>
    <!-- Selected tab (using d-pad) -->
    <item android:color="@color/green" android:state_focused="true" android:state_pressed="false" android:state_checked="true"/>

</selector>