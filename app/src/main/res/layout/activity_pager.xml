<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_tab_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e6" />

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioGroup
            android:id="@+id/main_tab_rg_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingTop="1dp">


            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_icon_me_msg_bg"
                android:text="消息"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp" />

            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_icon_webcast_bg"
                android:text="通讯录"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp" />

            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/tab_icon_find_bg"
                android:text="哪哪"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp" />

            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/tab_icon_me_bg"
                android:text="我"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp" />
        </RadioGroup>



    </FrameLayout>

</LinearLayout>