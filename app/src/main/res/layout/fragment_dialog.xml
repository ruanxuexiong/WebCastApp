<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="289dp"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.android.nana.util.VerticalSeekBar
                android:id="@+id/seekBar2"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:max="100"
                android:maxHeight="4dip"
                android:minHeight="4dip"
                android:progressDrawable="@drawable/seekbar_bg"
                android:splitTrack="true"
                android:thumb="@drawable/volume_control_point" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_sound" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/iat_text"
                    android:layout_width="260dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edittext_dialog"
                    android:textColor="@color/white"
                    android:gravity="top|left"
                    android:paddingBottom="10dp"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_send"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="松手编辑发送"
                    android:textColor="@color/green_99" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xy"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_X"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/main_blue" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_dd"/>

                <TextView
                    android:id="@+id/tv_V"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="说完了"
                    android:textColor="@color/main_blue" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
