<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".identity.user_idActivity">

    <include layout="@layout/view_toolbar_common" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名称 　 可口可乐-中国"
        android:textSize="@dimen/sp_17"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#DDDDDD"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“用户名称”修改通过认证后无法再次更改,登录的帐号即为需被认证的帐号，提交申请后无法更换申请账号。"
        android:textColor="#F54343"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_6"
        android:textSize="@dimen/sp_13"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证正面"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/idcard_back1"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/idcard_z"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="请上传您的身份证正面照，确保清晰平整。"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
        <Button
            android:id="@+id/idcard_z"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:text="点击上传"
            android:background="#2AA3EF"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证背面"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/idcard_back2"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/idcard_f"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="请上传您的身份证背面照，确保清晰平整。 "
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            />
        <Button
            android:id="@+id/idcard_f"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:text="点击上传"
            android:background="#2AA3EF"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓　　名"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_20"

            />
        <EditText
            android:id="@+id/ed_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入真实姓名"
            android:background="@null"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#DDDDDD"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_20"

            />
        <EditText
            android:id="@+id/ed_idcard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入18位身份证号码"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:maxLength="18"
            android:maxLines="1"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#DDDDDD"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/radio_button_bg_blue_selector"
            android:button="@null"
            android:text="同意"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《个人认证规则》"
            android:textColor="#108EE9"
            android:onClick="onJumpWeb"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

            <Button
                android:id="@+id/id_auth_txt_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交申请"
                android:layout_margin="@dimen/dp_20"
                android:background="#2AA3EF"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>