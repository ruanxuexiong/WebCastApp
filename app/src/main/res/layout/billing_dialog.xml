<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LL_this"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="结算规则"
            android:textColor="@color/green_33"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐分红如何计算："
                android:textColor="#F54343"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="5dp"
                android:text="你邀请的徒弟(好友)下载注册注册了哪哪，他就会在哪哪上随时随地、哪哪都能点赞获得随时提现的现金红包，天天都有、越领越多！\n 你的徒弟每点赞获得一笔红包收入，你将会得哪哪官方另外发放给你的这笔金额的50%奖励！\n你的徒孙每点赞获得一笔红包收入，你将会你的徒孙每点赞获得一笔红包收入，你将会5%奖励！"
                android:textColor="@color/green_33"
                android:textSize="14dp" />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/huodong_toast_img"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="如何提现："
                android:textColor="#F54343"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:text="提现方式：打开哪哪-【我】-【我的钱包】-【提现】，输入银行卡号等信息提交提现申请。"
                android:textColor="@color/green_33"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/dialog_pre_entry_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_xx"
        android:padding="10dip" />

</RelativeLayout>
