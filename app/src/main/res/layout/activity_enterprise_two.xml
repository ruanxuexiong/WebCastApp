<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".identity.enterprise_twoActivity">



        <include layout="@layout/view_toolbar_common" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名称 　 可口可乐-中国"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“用户名称”修改通过认证后无法再次更改,登录的帐号即为需被认证的帐号，提交申请后无法更换申请账号。"
                    android:textColor="#F54343"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textSize="@dimen/sp_13"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业营业执照"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_16"
                    />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/idcard_back1"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_60"
                        android:src="@mipmap/id_gonghan"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="请上传最新营业执照正面照，需加盖彩色公章，内容清晰无残缺。"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        />
                    <Button
                        android:id="@+id/idcard_z"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:text="点击上传"
                        android:background="#2AA3EF"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证申请公函"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_16"
                    />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/idcard_back2"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_60"
                        android:src="@mipmap/id_zhizhao"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="填写相关信息完毕后需加盖公章，上传清晰无残缺扫描件。"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_16"
                        />
                    <Button
                        android:id="@+id/idcard_f"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:text="点击上传"
                        android:background="#2AA3EF"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"

                        />
                    <EditText
                        android:id="@+id/ed_company"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="营业执照全称，将作为发票抬头"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:textSize="@dimen/sp_16"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信用代码"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"

                        />
                    <EditText
                        android:id="@+id/ed_credit_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="18位统一社会信用代码"
                        android:background="@null"
                        android:maxLength="18"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:textSize="@dimen/sp_16"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"

                        />
                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="运营人手机号"
                        android:background="@null"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:textSize="@dimen/sp_16"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验证码"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"

                        />
                    <EditText
                        android:id="@+id/ed_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="请输入验证码"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:textSize="@dimen/sp_16"
                        />
                    <TextView
                        android:id="@+id/get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/green_null_bg_shape"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginRight="30dp"
                        android:paddingTop="5dp"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_button_bg_blue_selector"
                        android:text="同意"
                        android:textSize="@dimen/sp_16"
                        />
                    <TextView
                        android:onClick="onJumpWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《企业认证规则》"
                        android:textColor="#108EE9"
                        android:textSize="@dimen/sp_16"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提交申请"
                    android:layout_margin="@dimen/dp_20"
                    android:background="#2AA3EF"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
