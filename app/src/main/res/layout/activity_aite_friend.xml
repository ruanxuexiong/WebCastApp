<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".friend.aiteFriendActivity">

    <include layout="@layout/view_toolbar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <LinearLayout
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <ImageView
              android:layout_marginLeft="@dimen/dp_10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_san_search"
              />
          <EditText
              android:id="@+id/friends_seach"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:paddingLeft="@dimen/dp_5"
              android:background="@null"
              android:hint="搜索"
              android:layout_height="@dimen/dp_50"
              android:singleLine="true"
              android:imeOptions="actionSearch"
              />
      </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_bg">


            <ListView
                android:id="@+id/lv_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_list_view"
                android:layout_gravity="center"
                android:divider="@color/activity_bg"
                android:dividerHeight="0.5dp" />


            <TextView
                android:id="@+id/tv_dialog"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:background="@drawable/number_base"
                android:gravity="center"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.android.nana.widget.SideBar
                android:id="@+id/sidrbar"
                android:layout_width="30.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>