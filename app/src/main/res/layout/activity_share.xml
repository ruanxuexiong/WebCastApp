<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_gray"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/view_wx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/icon_wx"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="微信好友"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/view_wx_moment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/icon_wx_nu"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="朋友圈"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/view_san"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/icon_share_san"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="哪哪好友"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/view_copy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/icon_copy"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="复制链接"
        android:textColor="@color/text_secondary" />

</LinearLayout>
