<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:textColor="@color/black_32"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/update_pass_edit_old_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/grey_light_bg_shape"
            android:hint="旧密码"
            android:inputType="textPassword"
            android:paddingBottom="9dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:textColor="@color/black_32"
            android:textColorHint="@color/grey_e6"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/black_32"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/update_pass_edit_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grey_light_bg_shape"
            android:hint="密码不少于6位"
            android:inputType="textPassword"
            android:paddingBottom="9dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:textColor="@color/black_32"
            android:textColorHint="@color/grey_e6"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/black_32"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/update_pass_edit_re_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grey_light_bg_shape"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:paddingBottom="9dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:textColor="@color/black_32"
            android:textColorHint="@color/grey_e6"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/update_pass_txt_update"
        style="@style/bule_big_button_style"
        android:layout_marginTop="25dp"
        android:text="确认" />
</LinearLayout>