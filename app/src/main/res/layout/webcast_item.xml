<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f5"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/webcast_item_iv_picture"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/webcast_item_txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="标题"
            android:textColor="@color/grey_64"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/webcast_item_txt_all_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_arrow_right"
            android:text="全部"
            android:textColor="@color/main_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <com.android.common.ui.CustomGridView
        android:id="@+id/webcast_item_gv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/grey_f5"
        android:horizontalSpacing="0.5dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="0.5dp" />

</LinearLayout>