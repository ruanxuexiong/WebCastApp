<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/common_header_layout" />

    <TextView
        android:id="@+id/article_detail_txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black_32"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_detail_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:layout_weight="0.01"
        android:background="@color/grey_f5"
        android:src="@drawable/detail_bg"
        android:textColor="@color/black_32"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/article_detail_txt_collection"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grey_bg_shape"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/main_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/article_detail_txt_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/article_share"
            android:drawableLeft="@drawable/icon_praise_nor"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="10"
            android:textColor="@color/grey_64"
            android:textSize="12sp" />

        <ImageView

            android:id="@+id/article_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_share_nor"
            android:padding="10dp" /><!--  android:src="@drawable/icon_share_nor" -->

    </RelativeLayout>

</LinearLayout>