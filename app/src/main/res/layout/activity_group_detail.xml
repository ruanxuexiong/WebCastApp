<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dd" />

    <com.android.nana.loading.MultipleStatusView
        android:id="@+id/multiple_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_f5"
                android:orientation="vertical">

                <com.android.nana.widget.DemoGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="start"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="5"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_dd" />

                <RelativeLayout
                    android:id="@+id/group_member_size_item"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/grey_click_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/group_member_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="查看全部群成员"
                        android:textColor="@color/green_33"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/icon_album_data"
                        android:gravity="center"
                        android:textColor="@color/green_99"
                        android:textSize="16dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_head"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/grey_click_selector"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="群聊头像"
                            android:textColor="@color/green_33"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_group"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableRight="@drawable/icon_album_data"
                                android:gravity="center"
                                android:textSize="16dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_head"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/grey_dd" />

                    <RelativeLayout
                        android:id="@+id/rl_name"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/grey_click_selector"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="群聊名称"
                            android:textColor="@color/green_33"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/icon_album_data"
                            android:gravity="center"
                            android:textColor="@color/green_99"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_name"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/grey_dd" />

                    <RelativeLayout
                        android:id="@+id/rl_notice"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="群公告"
                            android:textColor="@color/green_33"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/icon_album_data"
                            android:textColor="@color/green_99"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/grey_dd" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_record"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_click_selector"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="查找聊天记录"
                        android:textColor="@color/green_33"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/icon_album_data"
                        android:textColor="@color/green_99"
                        android:textSize="16dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/grey_dd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/grey_click_selector"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="消息免打扰"
                            android:textColor="@color/green_33"
                            android:textSize="16dp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/btn_disturb"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="12dp"
                            android:drawablePadding="10dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/grey_dd" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/grey_click_selector"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="会话置顶"
                            android:textColor="@color/green_33"
                            android:textSize="16dp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/btn_overhead"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="12dp"
                            android:drawablePadding="10dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/grey_dd" />

                    <RelativeLayout
                        android:id="@+id/rl_clear"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/grey_click_selector"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="清除聊天记录"
                            android:textColor="@color/green_33"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/grey_dd" />
                </LinearLayout>


                <com.android.nana.widget.StateButton
                    android:id="@+id/btn_del"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="解散并删除"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    app:normalBackgroundColor="#FE3F35"
                    app:pressedBackgroundColor="@color/bg_light_red"
                    app:radiusStateButton="4dp" />
            </LinearLayout>
        </ScrollView>
    </com.android.nana.loading.MultipleStatusView>
</LinearLayout>
