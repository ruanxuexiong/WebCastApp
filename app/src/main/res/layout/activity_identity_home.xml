<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".identity.identity_homeActivity">

    <include layout="@layout/view_toolbar_common" />

    <LinearLayout
        android:id="@+id/id_next"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_user_img"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人身份认证"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认用户个人真实身份"
                android:textSize="@dimen/sp_13"
                android:textColor="#999999"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即申请"
                android:textColor="#2AA3EF"
                android:layout_marginRight="@dimen/dp_10"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_album_data"
                />
        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:visibility="gone"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:background="#F9FAFB"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_fabuvideo"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布视频"
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="≥1个"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/id_video_next"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去完成"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:background="#2AA3EF"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:background="#F9FAFB"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_fensi"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝量"
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="≥1个"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去完成"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"

            android:textColor="#999999"
            />
    </LinearLayout>
</LinearLayout>

    <TextView
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="立即申请"
        android:textSize="@dimen/sp_18"
        android:background="#2AA3EF"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/white"
        android:gravity="center"
        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_1"
    android:background="#DDDDDD"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_20"
    />
    <LinearLayout
        android:id="@+id/qiye_next"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_qiye"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司机构认证"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助企业用户提升品牌与影响力"
                android:textSize="@dimen/sp_13"
                android:textColor="#999999"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即申请"
                android:textColor="#2AA3EF"
                android:layout_marginRight="@dimen/dp_10"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_album_data"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#DDDDDD"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        />
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_user_img"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构认证"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适合企业、媒体、国家机构和其他知名机构申请
申请方式：请用电脑登录www.nanapal.com申请"
                android:textSize="@dimen/sp_13"
                android:textColor="#999999"
                android:paddingRight="@dimen/dp_20"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>