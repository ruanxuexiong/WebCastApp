<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner_card"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="209dp"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="83dp"
        android:orientation="vertical">

        <com.android.nana.widget.StateButton
            android:id="@+id/btn_send_card"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:radiusStateButton="4dp"
            android:gravity="center"
            android:text="发名片"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:normalBackgroundColor="@color/right"
            app:pressedBackgroundColor="@color/text_x" />


        <com.android.nana.widget.StateButton
            android:id="@+id/btn_edit_card"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:radiusStateButton="4dp"
            android:gravity="center"
            android:text="制作编辑名片"
            android:textColor="@color/green_33"
            android:textSize="17dp"
            app:normalBackgroundColor="@color/white"
            app:pressedBackgroundColor="@color/white" />


        <com.android.nana.widget.StateButton
            android:id="@+id/btn_make_card"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="免费打印纸质名片"
            android:textColor="@color/green_33"
            android:textSize="17dp"
            app:radiusStateButton="4dp"
            app:normalBackgroundColor="@color/white"
            app:pressedBackgroundColor="@color/white" />

    </LinearLayout>

</LinearLayout>
