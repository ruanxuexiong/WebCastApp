<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <RelativeLayout

            android:id="@+id/ran_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="1"
            android:textColor="@color/green_99"
            android:textSize="14dp" />


        <com.android.nana.ui.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_5" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Naem"
            android:textColor="@color/green_99"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:textSize="@dimen/dp_13" />


        </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/zisun_lin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_15"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
            <com.android.nana.ui.RoundImageView
                android:id="@+id/iv_avatar1"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="5dp" />
            <com.android.nana.ui.RoundImageView
                android:layout_marginLeft="@dimen/dp_45"
                android:id="@+id/iv_avatar2"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"

                android:layout_marginTop="5dp" />
            <com.android.nana.ui.RoundImageView
            android:layout_marginLeft="@dimen/dp_65"
            android:id="@+id/iv_avatar3"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/xiaore"
                android:gravity="center"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/yuan"
                android:layout_marginLeft="@dimen/dp_85"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/xiao_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6A747E"
                    android:textSize="@dimen/sp_11"

                    />


            </RelativeLayout>

        </RelativeLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="贡献收益"
          android:textColor="#999999"
          android:textSize="@dimen/sp_13"
          />

        <TextView
            android:id="@+id/zisun_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="#FF0000"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#999999"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@color/grey_dd" />
</LinearLayout>
