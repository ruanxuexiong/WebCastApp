<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f5"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="邮箱地址"
            android:textColor="@color/grey_96"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/email_et_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grey_light_bg_shape"
            android:paddingBottom="9dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:textColor="@color/black_32"
            android:textColorHint="@color/grey_e6"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/email_txt_commit"
        style="@style/bule_big_button_style"
        android:layout_marginTop="25dp"
        android:text="确定" />
</LinearLayout>
