<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="11dp"
        android:background="#EFEFF4"
        android:gravity="center|left"
        android:text="A"
        android:textColor="@color/green__66" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/grey_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingTop="10dp">


        <LinearLayout
            android:id="@+id/ll_no"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_phone_no"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_no_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="非"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_show"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_picture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_head_default"
                app:riv_corner_radius="3dip"
                app:riv_tile_mode="repeat" />

            <ImageView
                android:id="@+id/iv_identy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_authen"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_00"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:textColor="@color/green_99"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="24dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="已添加"
                android:textColor="@color/green_99"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_phone_add" />

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_phone_send"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
