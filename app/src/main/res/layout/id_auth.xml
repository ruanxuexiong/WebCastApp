<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="人像面照片"
            android:textColor="@color/black_32"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/id_auth_iv_positive"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/grey_ef" />

            <ImageView
                android:id="@+id/id_auth_iv_positive_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_bule_camer" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="国徽面照片"
            android:textColor="@color/black_32"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/id_auth_iv_opposite"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/grey_ef" />

            <ImageView
                android:id="@+id/id_auth_iv_opposite_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_bule_camer" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓　　名："
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"


            />
        <EditText
            android:id="@+id/ed_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:hint="请输入真实姓名"
            android:maxLines="1"
            android:background="@null"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"

        android:background="@color/gray_dd" />


    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号："
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"

            />
        <EditText
            android:id="@+id/ed_idcard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:hint="请输入18位身份证号码"
            android:maxLength="18"
            android:maxLines="1"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"

        android:background="@color/gray_dd" />

    <TextView
        android:id="@+id/id_auth_txt_commit"
        style="@style/bule_big_button_style"
        android:layout_marginTop="35dp"
        android:text="提交认证" />
</LinearLayout>