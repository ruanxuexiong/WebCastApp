<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/prl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img_one1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <com.luck.picture.lib.widget.longimage.SubsamplingScaleImageView
                android:id="@+id/longImg"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_img_one2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_one"
            android:background="@color/main_blue"
            android:drawableRight="@drawable/icon_album_data"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="立即下载"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_img_two21"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/iv_img_two22"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_img_three1"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_three2"
                android:layout_width="0dp"
                android:layout_height="124dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_three3"
                android:layout_width="0dp"
                android:layout_height="124dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_three2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_img_three21"
            android:layout_width="wrap_content"
            android:layout_height="375dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_widthPercent="49.5%" />

        <LinearLayout
            android:id="@+id/three2_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            app:layout_widthPercent="49.5%">

            <ImageView
                android:id="@+id/iv_img_three22"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_three23"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_img_four1"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_widthPercent="49.5%" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            app:layout_widthPercent="49.5%">

            <ImageView
                android:id="@+id/iv_img_four2"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_four3"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_four4"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>


    <!--第4张第二种样式-->
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_four2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_img_four21"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/iv_img_four21">

                <ImageView
                    android:id="@+id/iv_img_four22"
                    android:layout_width="123dp"
                    android:layout_height="124dp"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/iv_img_four23"
                    android:layout_width="123dp"
                    android:layout_height="124dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/iv_img_four24"
                    android:layout_width="123dp"
                    android:layout_height="124dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>


    <!--第5张样式-->
    <LinearLayout
        android:id="@+id/prl_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_five"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_five2"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_five3"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_five4"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_five5"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/prl_five1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_five21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_five21"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_five22"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_five23"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_img_five24"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />


            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_img_five25"
                        android:layout_width="124dp"
                        android:layout_height="124dp"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:id="@+id/ll_clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#030303"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_count_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+21"
                            android:textColor="@color/white"
                            android:textSize="24dp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
