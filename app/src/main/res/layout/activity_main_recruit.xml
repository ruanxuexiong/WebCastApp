<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_common" />

    <FrameLayout
        android:id="@+id/main_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_dd" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <RadioGroup
            android:id="@+id/main_tab_rg_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingTop="1dp">


            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_icon_position"
                android:text="牛人"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp" />


            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/tab_icon_interact"
                android:text="互动"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp"
                android:visibility="gone" />

            <com.android.nana.widget.BadgeRadioButton
                android:id="@+id/main_tab_rb_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/tab_icon_job_man"
                android:text="我的招聘"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10dp" />
        </RadioGroup>
    </FrameLayout>
</LinearLayout>
