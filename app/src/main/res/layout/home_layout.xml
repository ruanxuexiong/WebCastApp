<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--   android:drawableRight="@drawable/icon_b_subscript"-->
        <TextView
            android:id="@+id/home_layout_txt_country"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawablePadding="2dp"

            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="7dp"
            android:text="找人"
            android:textColor="@color/main_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_layout_txt_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/grey_bg_shape"
            android:drawableLeft="@drawable/icon_sreach_gray"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:text="输入姓名、三分钟号码、公司等"
            android:textColor="@color/grey_96"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/home_layout_txt_filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:text="筛选"
            android:textColor="@color/main_blue"
            android:textSize="15sp" />
    </LinearLayout>


    <com.android.nana.loading.MultipleStatusView
        android:id="@+id/multiple_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_scrollview" />
    </com.android.nana.loading.MultipleStatusView>


</LinearLayout>