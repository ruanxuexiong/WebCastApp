<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_friend"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/grey_click_selector"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_friend"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:paddingLeft="12dp"
                android:text="新的朋友"
                android:textColor="@color/green_00"
                android:textSize="17dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <net.soulwolf.widget.speedyselector.widget.SelectorTextView
                    android:id="@+id/tv_msg_num"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@color/bg_light_red"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:visibility="gone"
                    app:spRadius="10dp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/grey_dd" />


    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/grey_click_selector"
        android:drawableLeft="@drawable/icon_follow"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingLeft="12dp"
        android:text="我的关注"
        android:textColor="@color/green_00"
        android:textSize="17dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/grey_dd" />

    <LinearLayout
        android:id="@+id/ll_fans"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/grey_click_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:drawableLeft="@drawable/icon_fans"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="12dp"
            android:text="关注我的"
            android:textColor="@color/green_00"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_fans_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="left|center"
            android:textColor="@color/green_99"
            android:visibility="gone" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/grey_dd" />


    <TextView
        android:id="@+id/tv_group"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/grey_click_selector"
        android:drawableLeft="@drawable/icon_mail_group"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingLeft="12dp"
        android:text="我的群聊"
        android:textColor="@color/green_00"
        android:textSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/grey_dd" />


    <LinearLayout
        android:id="@+id/layout_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
